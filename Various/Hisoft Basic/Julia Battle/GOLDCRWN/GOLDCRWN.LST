Rem The Golden Crown
Rem A mini adventure
Rem By Julia Battle
Rem (c) Atari ST User
Rem ST Basic or HiSoft Basic
' Fullw 2
' Clearw 2
Clear
Gosub Z730
Print "Welcome to Karnia..."
Print "Your task is to find the Kingºs"
Print "stolen crown and return it to him."
Print
Print "Please type in UPPER case..."
Print
Input "What is your name:";Name$
While Not Finished%
  Print
  Print "You are in ";R$(P%);"."
  If P%=11 And F%(1)=0 Then
    Print M$(1)
  Endif
  If P%=4 Then
    Print "A";L$;"safe is here."
  Endif
  For I%=1 To 13
    If L%(I%)=P% Then
      Print "A ";Ob$(I%);" is here."
    Endif
    If L%(I%)=16 Then
      Print "You have a ";Ob$(I%);"."
    Endif
  Next I%
  Z210:
  C$=""
  Input "What now";C$
  If C$="" Then
    Goto Z210
  Endif
  C$=Left$(C$,3)
  I%=Instr(V$,C$)/3
  If I%=0 Then
    Print "Eh?"
    Goto Z210
  Endif
  On I% Gosub Z650,Z650,Z650,Z650,Z580,Z560,Z540,Z500,Z440,Z420,Z380,Z350
Wend
If P%<>6 Or L%(13)<>16 Then
  Goto Z310
Endif
Print "The King takes the crown..."
Print "You are knighted - arise sir ";Name$
Z310:
Print
Print
Print "Hit Return..."
Input C$
End
Rem :
Procedure Z350
  If P%<>4 Or L%(6)<>16 Then
    Print "Eh?"
  Else
    L$="n open "
    L%(13)=4
  Endif
Return
Procedure Z380
  If P%<>1 Or L%(10)<>16 Then
    Print "Ok"
  Else
    Print "A hidden door slides open"
    E$(1)="WESSOUEAS"
  Endif
Return
Procedure Z420
  If L%(10)=16 Then
    Print M$(10)
  Else
    Print "Seems ordinary..."
  Endif
Return
Procedure Z440
  If P%=6 Then
    Print M$(9)
    Finished%=-1
  Else
    If L%(7)<>16 Then
      Print M$(9)
      Finished%=-1
    Else
      Print "You stab him with the knife... he's dead."
      If P%=8 Then
        L%(3)=32
        If P%=9 Then
          L%(4)=32
        Endif
      Endif
    Endif
  Endif
Return
Procedure Z500
  If P%<>11 Or F%(2)<>1 Or L%(11)<>16 Then
    Print M$(7)
  Else
    Print
    Print M$(3)
    Print M$(4)
    L%(12)=16
    L%(11)=32
    F%(1)=1
  Endif
Return
Procedure Z540
  If L%(9)=16 Then
    Print "Ok"
    F%(3)=1
  Else
    Print "Eh?"
  Endif
Return
Procedure Z560
  If L%(11)=16 And P%=12 Then
    Print "Ok "
    F%(2)=1
  Else
    Print M$(6)
  Endif
Return
Procedure Z580
  If P%=3 And L%(12)<>16 Then
    Print M$(2)
  Else
    If P%=9 And L%(4)=9 Then
      Print M$(2)
    Else
      For I%=6 To 13
        If L%(I%)=P% Then
          L%(I%)=16
        Endif
      Next I%
      If P%=3 Then
        L%(12)=32
        Print M$(8)
      Endif
    Endif
  Endif
Return
Procedure Z650
  D%=Instr(E$(P%),C$)
  If D%<1 Or D%>10 Then
    Print "Can't go that way"
  Else
    If P%<>8 Or I%<>1 Then
      Goto Z690
    Else
      If F%(3)=0 Then
        Print M$(2)
        Goto Retur
        Z690:
        P%=P%+4*(I%=1)-4*(I%=3)+(I%=4)-(I%=2)
        If P%=6 And L%(13)=16 Then
          Finished%=-1
        Endif
      Endif
    Endif
  Endif
  Retur:
Return
Procedure Z730
  Rem Initialise
  Dim R$(15),E$(15),Ob$(13),L%(13),M$(10),F%(10)
  V$="***NOREASSOUWESTAKFILWEATHRKILEXASHAUNL"
  L$=" LOCKED "
  For I%=0 To 15
    Read A$,E$(I%)
    R$(I%)=Mid$(A$,4)+Left$(A$,3)
  Next I%
  For I%=1 To 13
    Read A$,L%(I%)
    Ob$(I%)=Mid$(A$,4)+Left$(A$,3)
  Next I%
  For I%=1 To 10
    Read A$
    M$(I%)=Mid$(A$,4)+Left$(A$,3)+"!"
  Next I%
  P%=6
  Finished%=0
  F%(1)=0
  F%(2)=0
  F%(3)=0
Return
