FUNCTION ReportError$ (error_no)
SELECT CASE error_no
	CASE 81 : ReportError$="Sub-program not present"
	CASE 80 : ReportError$="Array not diminished"
	CASE 79 : ReportError$="Fatal address error"
	CASE 78 : ReportError$="Fatal bus error"
	CASE 77 : ReportError$="BREAK pressed"
	CASE 76 : ReportError$="Path not found"
	CASE 75 : ReportError$="Path/file access error"
	CASE 70 : ReportError$="Disk write-protected!"
	CASE 69 : ReportError$="MagiC O/S reported fault"
	CASE 68 : ReportError$="Device unavailable"
	CASE 67 : ReportError$="Too many files"
	CASE 64 : ReportError$="Bad file name"
	CASE 63 : ReportError$="Bad record number"
	CASE 62 : ReportError$="Input past end"
	CASE 61 : ReportError$="Disk full"
	CASE 57 : ReportError$="Device I/O error"
	CASE 54 : ReportError$="Bad file mode"
	CASE 53 : ReportError$="File not found"
	CASE 52 : ReportError$="Bad channel number"
	CASE 51 : ReportError$="Internal error"
	CASE 50 : ReportError$="FIELD overflow"
	CASE 31 : ReportError$="Wrong number of dimensions"
	CASE 23 : ReportError$="Line buffer overflow"
	CASE 20 : ReportError$="RESUME without error"
	CASE 16 : ReportError$="String formula too complex"
	CASE 13 : ReportError$="Type mismatch"
	CASE 11 : ReportError$="Division by zero"
	CASE 10 : ReportError$="Redimensioned array"
	CASE 9 : ReportError$="Subscript out of range"
	CASE 7 : ReportError$="Out of memory"
	CASE 6 : ReportError$="Overflow"
	CASE 5 : ReportError$="Illegal function call"
	CASE 4 : ReportError$="Out of data"
	CASE 3 : ReportError$="RUTURN without GOSUB"
	CASE 0 : ReportError$="No error reported"
	CASE -1 : ReportError$="Fundamental error"
	CASE -2 : ReportError$="Drive not ready!"
	CASE -3 : ReportError$="Unknown command"
	CASE -4 : ReportError$="CRC error"
	CASE -5 : ReportError$="Bad request"
	CASE -6 : ReportError$="Seek error"
	CASE -7 : ReportError$="Unknown media"
	CASE -8 : ReportError$="Sector not found"
	CASE -9 : ReportError$="No paper"
	CASE -10 : ReportError$="Write fault"
	CASE -11 : ReportError$="Read fault"
	CASE -12 : ReportError$="General error"
	CASE -13 : ReportError$="Disk write-protected!"
	CASE -14 : ReportError$="Media change"
	CASE -15 : ReportError$="Unknown device"
	CASE -16 : ReportError$="Bad sectors on format"
	CASE -17 : ReportError$="Insert another disk"
	CASE -32 : ReportError$="Invalid function number"
	CASE -33 : ReportError$="File not found"
	CASE -34 : ReportError$="Path not found"
	CASE -35 : ReportError$="Too many files open"
	CASE -36 : ReportError$="Access denied"
	CASE -37 : ReportError$="Invalid handle"
	CASE -39 : ReportError$="Insufficient memory"
	CASE -40 : ReportError$="Invalid memory block address"
	CASE -46 : ReportError$="Invalid drive"
	CASE -49 : ReportError$="No more files"
	CASE -50 : ReportError$="Disk full"
	CASE -64 : ReportError$="Range error"
	CASE -65 : ReportError$="Internal error"
	CASE -66 : ReportError$="Invalid program load format"
	CASE -67 : ReportError$="Setblock failure"
	CASE -69 : ReportError$="MagiC O/S reported fault"
	CASE -99 : ReportError$="Bootsector error" ' this is made up!
	CASE ELSE : ReportError$="A"+STR$(error_no)+" has occured"
END SELECT
END FUNCTION

