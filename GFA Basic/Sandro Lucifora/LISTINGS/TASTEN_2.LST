REPEAT
  t$=INKEY$                             ! ein zeichen aus tastaturpuffer auslesen
  IF t$<>""                             ! wenn taste gedrÅckt ...
    PRINT LEN(t$),ASC(t$),              ! lÑnge und ASCII-Wert des ersten Zeichen
    IF LEN(t$)=2                        ! wenn taste mit zwei zeichen ...
      SELECT ASC(RIGHT$(t$))
      CASE 59                           ! F01
      CASE 60                           ! F02
      CASE 61                           ! F03
      CASE 62                           ! F04
      CASE 63                           ! F05
      CASE 64                           ! F06
      CASE 65                           ! F07
      CASE 66                           ! F08
      CASE 67                           ! F09
      CASE 68                           ! F10
      CASE 84                           ! F11
      CASE 85                           ! F12
      CASE 86                           ! F13
      CASE 87                           ! F14
      CASE 88                           ! F15
      CASE 89                           ! F16
      CASE 90                           ! F17
      CASE 91                           ! F18
      CASE 92                           ! F19
      CASE 93                           ! F20
      CASE 97                           ! UNDO
      CASE 98                           ! HELP
      CASE 71                           ! ClrHome
      CASE 82                           ! Insert
      CASE 72                           ! hoch
      CASE 80                           ! runter
      CASE 75                           ! links
      CASE 77                           ! rechts
      ENDSELECT
    ELSE                                ! wenn taste mit einem zeichen ...
    ENDIF
  ENDIF
UNTIL MOUSEK
