' /*** VerÑnderung des PulldownmenÅ-Objektbaumes ***/
'
DIM m$(30)
i%=-1
REPEAT
  INC i%
  READ m$(i%)
UNTIL m$(i%)="*"
m$(i%)=""
MENU m$()
ON MENU GOSUB auswertung
OPENW 0
DATA Desk,  Info,-------------------,1,2,3,4,5,6,
DATA Muster,12345678,2,3,4,5,6,7,8,,*
'
'       |Rahmen|rrrr     mmmffff
spec%=&X111111110001000000010001
muster%=0
FOR i%=32 TO 39                     !mmm!
  spec%=AND(spec%,&X111111111111111110001111)
  spec%=OR(spec%,SHL(muster%,4))
  OB_SPEC(MENU(-1),i%)=spec%
  OB_TYPE(MENU(-1),i%)=20
  INC muster%
NEXT i%
'
REPEAT
  ON MENU
UNTIL MOUSEK AND 2
'
PROCEDURE auswertung
  MENU OFF
  wert%=MENU(5)-32
  SELECT wert%
  CASE 0
    DEFFILL 1,0
  CASE 7
    DEFFILL 1,2,8
  CASE 1 TO 6
    DEFFILL 1,2,wert%
  ENDSELECT
  PBOX 0,0,639,380
  PRINT AT(2,10);m$(MENU(0))
RETURN
