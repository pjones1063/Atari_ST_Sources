  '   * * * * * *  Quick-Sort  * * * * *
  DIM s(LOG(post)/LOG(2)+2,1),byt$(felter)
  s=0
  s(0,0)=1
  s(0,1)=post
l1370:
  v=s(s,0)
  h=s(s,1)
  DEC s
l1380:
  i=v
  j=h
  midt$=felt$(INT((i+j)/2),felt1)+felt$(INT((i+j)/2),felt2)
l1390:
  WHILE felt$(i,felt1)+felt$(i,felt2)<midt$
    INC i
  WEND
  WHILE felt$(j,felt1)+felt$(j,felt2)>midt$
    DEC j
  WEND
  IF i<=j THEN
    FOR f=0 TO felter
      byt$=felt$(i,f)
      felt$(i,f)=felt$(j,f)
      felt$(j,f)=byt$
    NEXT f
    INC i
    DEC j
  ENDIF
  IF i<=j THEN
    GOTO l1390
  ENDIF
  IF j-v<h THEN
    GOTO l1460
  ENDIF
  IF i<h THEN
    INC s
    s(s,0)=i
    s(s,1)=h
  ENDIF
  h=j
  GOTO l1480
l1460:
  IF v<j THEN
    INC s
    s(s,0)=v
    s(s,1)=j
  ENDIF
  v=i
l1480:
  IF h-v>12 THEN
    GOTO l1380
  ENDIF
  IF s>=0 THEN
    GOTO l1370
  ENDIF
  FOR i=2 TO post
    FOR f=0 TO felter
      byt$(f)=felt$(i,f)
    NEXT f
    j=i
    WHILE felt$(j-1,felt1)+felt$(j-1,felt2)>byt$(felt1)+byt$(felt2)
