PROCEDURE data_save
  @data_name
  ON ERROR GOSUB error
  OPEN "O",#1,name$
  PRINT #1,filnavn$
  PRINT #1,felter
  PRINT #1,poster
  PRINT #1,post
  PRINT #1,x
  PRINT #1,y
  PRINT #1,z
  FOR felt=0 TO felter
    PRINT #1,feltnavn$(felt)
  NEXT felt
  FOR p=1 TO post
    FOR felt=0 TO felter
      PRINT #1,felt$(p,felt)
    NEXT felt
  NEXT p
  gemt=-1
  CLOSE
return2:
  CLS
RETURN
'
PROCEDURE data_name
  ON ERROR GOSUB error
  FILESELECT "A:\*.dat","",name$
RETURN
'
PROCEDURE error
  IF w$="LOAD"
    RESUME return1
  ELSE
    RESUME return2
  ENDIF
RETURN
'
PROCEDURE pause
  PRINT CHR$(7)
  PAUSE 150
  CLS
RETURN
'
PROCEDURE ja_nej
  PRINT " J/N ? "
  ja=0
  nej=0
  REPEAT
    tast$=INPUT$(1)
  UNTIL INSTR("JN",UPPER$(tast$))<>0
  IF UPPER$(tast$)="J" THEN
    ja=-1
  ELSE
    nej=-1
  ENDIF
RETURN
