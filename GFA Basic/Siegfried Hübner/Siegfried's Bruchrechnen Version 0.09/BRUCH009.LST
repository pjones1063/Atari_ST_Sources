PROCEDURE auswahl
  DO
    a$=INKEY$
    a$=UPPER$(a$)
    IF a$="A"
      GOSUB addition
    ENDIF
    IF a$="S"
      GOSUB subtraktion
    ENDIF
    IF a$="M"
      GOSUB multiplikation
    ENDIF
    IF a$="D"
      GOSUB division
    ENDIF
    IF a$="E"
      ALERT 3,"Wollen Sie dieses|Programm verlassen ?",2,"Ja|Nein",d%
      IF d%=1
        END
      ENDIF
    ENDIF
    GOSUB inhalt
  LOOP
RETURN
