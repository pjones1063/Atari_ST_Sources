PROCEDURE addition
  GOSUB arbeit
  PRINT CHR$(27)+"p";
  PRINT AT(6,8);" >>>>>      Addition von BrÅchen      <<<<< "
  PRINT CHR$(27)+"q";
  IF w$="J"
    GOSUB alt1
  ELSE
    GOSUB neu1
  ENDIF
  PRINT CHR$(27)+"p";"             +             =                ";CHR$(27)+"q";
  IF w$="J"
    GOSUB alt2
  ELSE
    GOSUB neu2
  ENDIF
  PRINT AT(20,10);" Z2 ";
  FORM INPUT 7,z3$
  z3=VAL(z3$)
  PRINT AT(20,12);" N2 ";
  FORM INPUT 7,z4$
  z4=VAL(z4$)
  PRINT AT(34,10);
  z5=(z1*z4)+(z3*z2)
  IF z2=z4
    z5=z1+z3
  ENDIF
  PRINT USING "################",z5
  PRINT AT(34,12);
  z6=(z2*z4)
  IF z2=z4
    z6=z2
  ENDIF
  PRINT USING "################",z6
  z7=z5/z6
  PRINT AT(6,14);" Dezimalzahl davon         =";
  PRINT USING "############.###",z7
  PRINT CHR$(27)+"p";
  PRINT AT(6,16);" Wollen Sie mit diesem  Bruch "
  PRINT AT(6,17);" weiterrechnen. (J/N)       ? "
  PRINT CHR$(27)+"q";
  PRINT AT(40,17);
  FORM INPUT 1,w$
  w$=UPPER$(w$)
  IF w$="J"
    GOSUB arbeit
    GOSUB inhalt
  ENDIF
  IF w$="N"
    GOSUB arbeit
    GOSUB inhalt
  ENDIF
RETURN
