'
DIM tex$(100),ers$(100)  ! bei Bedarf Dimensionierungen Ñndern
'
' Filenamen fÅr Ersetzungstabelle abfragen
REPEAT
  fs_iinpath$="\*.ERS"
  fs_ireturn=FSEL_INPUT(fs_iinpath$,fs_insel$,fs_iexbutton)
  pathnr|=RINSTR(fs_iinpath$,"\")
  path$=LEFT$(fs_iinpath$,pathnr|)
  filename$=path$+fs_insel$
UNTIL EXIST(filename$)
' Files erîffnen
'
' Ersetzungstabelle anlegen
OPEN "I",#1,filename$
WHILE (NOT EOF(#1)) AND (z<100)
  INC z
  LINE INPUT #1,zeile$
  IF zeile$<>"" THEN
    po=INSTR(zeile$," ")
    tex$(z)=LEFT$(zeile$,po-1)
    ers$(z)=RIGHT$(zeile$,LEN(zeile$)-po)
  ENDIF
WEND
CLOSE #1
'
' Filenamen fÅr Programmfile abfragen
REPEAT
  fs_iinpath$="\*.ASC"
  fs_ireturn=FSEL_INPUT(fs_iinpath$,fs_insel$,fs_iexbutton)
  pathnr|=RINSTR(fs_iinpath$,"\")
  path$=LEFT$(fs_iinpath$,pathnr|)
  filename$=path$+fs_insel$
UNTIL EXIST(filename$)
'
' Filenamen fÅr Zielfile bestimmen
zielname$=LEFT$(filename$,LEN(filename$)-4)+"LST"+CHR$(0)
'
' Files erîffnen
OPEN "I",#1,filename$
OPEN "O",#2,zielname$
po=0
'
' Konvertierung
WHILE NOT EOF(#1)
  ' Programmzeile lesen
  LINE INPUT #1,zeile$
  IF zeile$<>"" THEN
    ' nur Zeilen mit Inhalt bearbeiten
    FOR i=1 TO z
      REPEAT
        ' nÑchstes Vorkommen eines Musters suchen
        po=INSTR(po,zeile$,tex$(i))
        IF po>0 THEN
          ' Textmuster vorhanden -> ersetzen
          links$=LEFT$(zeile$,po-1)
          le=LEN(tex$(i))
          rechts$=RIGHT$(zeile$,LEN(zeile$)-po-le+1)
          zeile$=links$+ers$(i)+rechts$
        ENDIF
      UNTIL po=0 ! bis dieses Muster vollstÑndig ersetzt
    NEXT i
    PRINT #2,zeile$
  ENDIF
WEND
CLOSE #1
CLOSE #2
