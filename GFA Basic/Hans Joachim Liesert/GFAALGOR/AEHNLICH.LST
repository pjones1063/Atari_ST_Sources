Dim Spaltenflag!(256)
Procedure Aehnlich(Wort1$,Wort2$)
  ' Initialisierungen
  Laenge=Len(Wort1$)
  Zeile=1
  Spalte=1
  Summe=0
  Ltzteeins=1
  Erstenull=0
  For I=1 To 256
    Spaltenflag!(I)=False
  Next I
  ' Wîrter untersuchen
  While Zeile<=Laenge
    If Spaltenflag!(Spalte)=False Then
      ' In dieser Splate noch keine öbereinstimmung -> testen
      If Mid$(Wort1$,Zeile,1)=Mid$(Wort2$,Spalte,1) Then
        ' Buchstaben waren gleich
        Inc Summe
        ' Spalte fÅr neuen Test sperren
        Spaltenflag!(Spalte)=True
        Ltzteeins=Spalte
        ' öbergang in nÑchste Zeile und nÑchste Spalte
        Erstenull=0
        Inc Zeile
        Inc Spalte
        If Spalte>Len(Wort2$) Then
          ' zu weit rechts, zurÅck in 1. Spalte
          Spalte=1
        Endif
      Else
        ' Buchstaben verschieden
        ' Erste Fehlstellung in dieser Zeile merken
        If Erstenull=0 Then
          Erstenull=Spalte
        Endif
        ' in die nÑchste Spalte
        Inc Spalte
        If Spalte>Len(Wort2$) Then
          ' zu weit rechts, zurÅck zur ersten Fehlstellung und 1 Zeile tiefer
          Spalte=Erstenull
          If Spalte=0 Then
            Spalte=1
          Endif
          Erstenull=0
          Inc Zeile
        Endif
      Endif
    Else
      ' Spalte schon durch andere öbereinstimmung belegt
      Inc Spalte
      If Spalte>Len(Wort2$) Then
        ' zu weit rechts, zurÅck zur letzten öbereinstimmung
        Spalte=Ltzteeins
        Erstenull=0
        Inc Zeile
      Endif
    Endif
  Wend
  ' Summe enthÑlt die Anzahl der öbereinstimmungen
  ' öbereinstimmungskoeffizient: Summe/Laenge
  Koeff=Summe/Laenge
Return
