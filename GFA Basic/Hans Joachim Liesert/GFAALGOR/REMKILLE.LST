Repeat
  Fileselect "\*.LST","",Filename$
Until Exist(Filename$) And Filename$<>"OHNEREM.LST"
' Files erîffnen
Open "I",#1,Filename$
Open "O",#2,"OHNEREM.LST"
While Not Eof(#1)
  ' Programmzeile lesen
  Line Input #1,Zeile$
  Flag!=False
  Eflag!=False
  Inc Z%
  Print At(1,1);Z%
  ' EinrÅckungen Åberspringen
  I%=1
  While Mid$(Zeile$,I%,1)=" "
    Inc I%
  Wend
  ' Zeile testen und ggf. schreiben
  If Mid$(Zeile$,I%,1)<>"'" And Mid$(Zeile$,I%,3)<>"Rem" Then
    While I%<Len(Zeile$) And (Eflag!=False)
      If Mid$(Zeile$,I%,2)=" !" And (Flag!=False) Then
        Eflag!=True
        Dec I%
      Endif
      If Mid$(Zeile$,I%,1)=Chr$(34) Then
        ' AnfÅhrungszeichen gefunden
        Flag!=Not (Flag!)
      Endif
      Inc I%
    Wend
    Print #2,Left$(Zeile$,I%)
  Endif
Wend
Close #1
Close #2


