' DATA-PCODE/PREAD
'
' Einsatzdemo fÅr 'Pcode' (DATA):
DEFFILL ,2,4
PBOX 0,0,40,40
DEFFILL ,2,2
PCIRCLE 20,20,15
GET 0,0,40,40,a$
@pcode_v2(2,LEN(a$)/2,VARPTR(a$))
EDIT
'
' Einsatzdemo fÅr 'Pread':
'
RESTORE pdatas
@pread_v2(*a%,*b%,0)
a$=SPACE$(b%*a%)
RESTORE pdatas_v2
@pread_v2(a%,b%,VARPTR(a$))
PUT 100,100,a$
PROCEDURE pcode_v2(p.frm%,p.anz%,p.adr%)
' - fÅr V2.xx -
HIDEM
LOCAL i%,j%,d$
IF p.frm%=1 OR p.frm%=2 OR p.frm%=4
OPEN "O",#99,"Pdatas.lst"
p.st%=MIN(18,24/p.frm%)
PRINT #99,"D ";STR$(p.frm%);",";STR$(p.anz%)
FOR i%=1 TO p.anz% STEP p.st%
d$="D "
FOR j%=1 TO MIN(p.st%,p.anz%-(i%-1))
IF p.frm%=1
d$=d$+STR$(PEEK(p.adr%+(i%-1)+(j%-1)))+","
ENDIF
IF p.frm%=2
d$=d$+STR$(DPEEK(p.adr%+(i%-1)*2+(j%-1)*2))+","
ENDIF
IF p.frm%=4
d$=d$+STR$(LPEEK(p.adr%+(i%-1)*4+(j%-1)*4))+","
ENDIF
NEXT j%
d$=LEFT$(d$,LEN(d$)-1)
PRINT #99,d$
NEXT i%
CLOSE #99
ENDIF
SHOWM
RETURN
'
PROCEDURE pread_v2(p.frm%,p.anz%,p.adr%)
' - fÅr V2.xx -
HIDEM
LOCAL i%,wrt%,anz%,frm%
IF p.adr%=0
READ frm%
*p.frm%=frm%
READ anz%
*p.anz%=anz%
ELSE
READ wrt%,wrt%
FOR i%=1 TO p.anz%
READ wrt%
IF p.frm%=1
POKE p.adr%+(i%-1),wrt%
ENDIF
IF p.frm%=2
DPOKE p.adr%+((i%-1)*2),wrt%
ENDIF
IF p.frm%=4
LPOKE p.adr%+((i%-1)*4),wrt%
ENDIF
NEXT i%
ENDIF
SHOWM
RETURN
pdatas_v2:
