'
PROCEDURE clx(flg%)
  LOCAL a$,fnd%
  a$=SPACE$(10000)
  BMOVE BASEPAGE+260,VARPTR(a$),10000
  IF flg%=0
    fnd%=INSTR(a$,CHR$(27)+"E")
    IF fnd%>0
      POKE BASEPAGE+260+fnd%,ASC("H")
    ENDIF
  ELSE
    fnd%=INSTR(a$,CHR$(27)+"H")
    IF fnd%>0
      POKE BASEPAGE+260+fnd%,ASC("E")
    ENDIF
  ENDIF
RETURN
