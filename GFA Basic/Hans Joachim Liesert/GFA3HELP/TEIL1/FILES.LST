' FILES-Beispiel 1
'
FILESELECT "\*.*","",f.name$
IF EXIST(f.name$)
  FILES f.name$ TO "BUFFDAT"
  buffer$=SPACE$(44)
  BLOAD "BUFFDAT",VARPTR(buffer$)
  KILL "BUFFDAT"
  f.sz%=VAL(MID$(buffer$,15,8))
  f.tm$=MID$(buffer$,23,10)
  f.dt$=MID$(buffer$,33,10)
  PRINT "Gr”že: ";f.sz%''"Zeit: ";f.tm$''"Datum: ";f.dt$
ENDIF
'
' FILES-Beispiel 2
'
FILESELECT "\*.*","",f.name$
IF EXIST(f.name$)
  OPEN "U",#99,f.name$
  f.sz%=LOF(#99)
  CLOSE #99
  PRINT "Dateigr”že : ";f.sz%
ENDIF
