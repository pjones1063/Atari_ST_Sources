' FN- Beispiel (incl Mstop)
'
DO
CLS
CLEAR
yt%=MIN(2,3-XBIOS(4))
DEFFILL ,2,2
GRAPHMODE 3
DEFLINE 1,3
REPEAT
MOUSE x0,y0,k
CIRCLE x0,y0,7
mstop(x0,y0,0)
CIRCLE x0,y0,7
UNTIL MOUSEK
GRAPHMODE 2
DEFLINE 1,1
CIRCLE x0,y0,7
TEXT x0+8,y0-8,"Nullpkt.(0/0)"
PAUSE 20
DO
GRAPHMODE 3
INC i
DEFLINE 4
REPEAT
MOUSE x,y,k
TEXT x+1,y-1,STR$(x-x0)+"/"+STR$(y0-y)+" ("+STR$(i)+")"
LINE 0,y,639,y
LINE x,0,x,399/yt%
mstop(x,y,0)
TEXT x+1,y-1,STR$(x-x0)+"/"+STR$(y0-y)+" ("+STR$(i)+")"
LINE 0,y,639,y
LINE x,0,x,399/yt%
UNTIL MOUSEK
REPEAT
MOUSE xx,yy,kk
BOX x,y,xx,yy
DEFLINE 4
LINE 0,yy,639,yy
LINE xx,0,xx,399/yt%
TEXT xx,yy,STR$(ABS(xx-x))+"/"+STR$(ABS(yy-y))
mstop(xx,yy,-1)
LINE 0,yy,639,yy
LINE xx,0,xx,399/yt%
TEXT xx,yy,STR$(ABS(xx-x))+"/"+STR$(ABS(yy-y))
DEFLINE 1
BOX x,y,xx,yy
UNTIL kk<>1
EXIT IF kk=2
breite=ABS(xx-x)
hoehe=ABS(yy-y)
x.diff=MIN(x,xx)-x0
y.diff=y0-MAX(y,yy)
GRAPHMODE 2
PBOX @x.lo,@y.lo,@x.ru,@y.ru
LINE @x.lo,@y.lo,@x.ru,@y.ru
LINE @x.lo,@y.ru,@x.ru,@y.lo
f.laeche=@flaeche
ADD areas,f.laeche
x.halbe=@halbe(breite)+x.diff
y.halbe=@halbe(hoehe)+y.diff
ADD an.xn,@multi(x.halbe)
ADD an.yn,@multi(y.halbe)
LOOP
GRAPHMODE 1
sx=an.xn/areas
sy=an.yn/areas
DEFLINE 4
LINE 0,y0-sy,640,y0-sy
LINE x0+sx,0,x0+sx,399
DEFLINE 1,3
CIRCLE x0+sx,y0-sy,7
PRINT AT(1,1);"SX : ";sx
PRINT AT(1,2);"SY : ";sy
REPEAT
IF MOUSEK
al$="N„chste Eingabe ?      "
ALERT 2,al$,1,"JA|NEIN|ENDE",antwort
ENDIF
IF antwort=3
EDIT
ENDIF
UNTIL antwort=1
LOOP
DEFFN flaeche=hoehe*breite
DEFFN halbe(seite)=seite/2
DEFFN multi(h.seite)=h.seite*f.laeche
DEFFN x.lo=x0+x.diff
DEFFN y.lo=y0-hoehe-y.diff
DEFFN x.ru=x0+x.diff+breite
DEFFN y.ru=y0-y.diff
'
PROCEDURE mstop(m.xex%,m.yex%,m.key%)
IF m.key%=<0
REPEAT
ON MENU
UNTIL MOUSEX<>m.xex% OR MOUSEY<>m.yex% OR MOUSEK<>ABS(m.key%)
ELSE
REPEAT
ON MENU
UNTIL MOUSEX<>m.xex% OR MOUSEY<>m.yex% OR MOUSEK=m.key%
ENDIF
RETURN
