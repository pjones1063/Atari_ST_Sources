' DATA-PCODE/PREAD
'
' Einsatzdemo fÅr 'Pcode' (DATA):
DEFFILL ,2,4
PBOX 0,0,40,40
DEFFILL ,2,2
PCIRCLE 20,20,15
GET 0,0,40,40,a$
@pcode(2,LEN(a$)/2,VARPTR(a$))
EDIT
'
RESTORE pdatas
@pread(0,a%,b%)
a$=SPACE$(MUL(b%,a%))
RESTORE pdatas
@pread(VARPTR(a$),a%,b%)
PUT 100,100,a$
'
PROCEDURE pcode(p.frm%,p.anz%,p.adr%)
' - fÅr V3.0 -
HIDEM
LOCAL i%,j%,d$
SELECT p.frm%
CASE 1,2,4
OPEN "O",#99,"Pdatas.lst"
p.st%=MIN(18,24/p.frm%)
PRINT #99,"D ";STR$(p.frm%);",";STR$(p.anz%)
FOR i%=1 TO p.anz% STEP p.st%
d$="D "
FOR j%=1 TO MIN(p.st%,p.anz%-(i%-1))
SELECT p.frm%
CASE 1
d$=d$+STR$(BYTE{p.adr%+(i%-1)+(j%-1)})+","
CASE 2
d$=d$+STR$(CARD{p.adr%+(i%-1)*2+(j%-1)*2})+","
CASE 4
d$=d$+STR$({p.adr%+(i%-1)*4+(j%-1)*4})+","
ENDSELECT
NEXT j%
d$=LEFT$(d$,LEN(d$)-1)
PRINT #99,d$
NEXT i%
CLOSE #99
ENDSELECT
SHOWM
RETURN
PROCEDURE pread(p.adr%,VAR p.frm%,p.anz%)
' - fÅr V3.0 -
HIDEM
LOCAL i%,wrt%
IF p.adr%=0
READ p.frm%,p.anz%
ELSE
READ wrt%,wrt%
FOR i%=1 TO p.anz%
READ wrt%
SELECT p.frm%
CASE 1
BYTE{p.adr%+(i%-1)}=wrt%
CASE 2
CARD{p.adr%+((i%-1)*2)}=wrt%
CASE 4
{p.adr%+((i%-1)*4)}=wrt%
ENDSELECT
NEXT i%
ENDIF
SHOWM
RETURN
pdatas:
