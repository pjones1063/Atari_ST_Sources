ABSOLUTE hmaus|,3583
ABSOLUTE vmaus|,3584
PRINT "Bitte Maus bewegen"
DO
REPEAT
UNTIL vmaus| OR hmaus|
CLS
IF hmaus|>0 AND hmaus|<16
PRINT AT(13,10);
OUT 5,3
ENDIF
IF hmaus|>15 AND hmaus|<256
PRINT AT(9,10);
OUT 5,4
ENDIF
IF vmaus|>0 AND vmaus|<16
PRINT AT(11,11);
OUT 5,2
ENDIF
IF vmaus|>15 AND vmaus|<256
PRINT AT(11,9);
OUT 5,1
ENDIF
CLR hmaus|,vmaus|
LOOP
