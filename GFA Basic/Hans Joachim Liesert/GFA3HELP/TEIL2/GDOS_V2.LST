PROCEDURE vqt_extent(txt$,vx1%,vy1%,vx2%,vy2%,vx3%,vy3%,vx4%,vy4%)
  LOCAL i%
  DPOKE CONTRL+4,8
  DPOKE CONTRL+6,LEN(txt$)
  FOR i%=0 TO LEN(txt$)-1
    DPOKE INTIN+i%*2,ASC(MID$(txt$,i%+1,1))
  NEXT i%
  VDISYS 116
  *vx1%=DPEEK(PTSOUT)
  *vy1%=DPEEK(PTSOUT+2)
  *vx2%=DPEEK(PTSOUT+4)
  *vy2%=DPEEK(PTSOUT+6)
  *vx3%=DPEEK(PTSOUT+8)
  *vy3%=DPEEK(PTSOUT+10)
  *vx4%=DPEEK(PTSOUT+12)
  *vy4%=DPEEK(PTSOUT+14)
RETURN
