PROCEDURE vqt_name(ind%,f.n%,fc%)
  LOCAL nm$,i%,i.ntout%
  DPOKE CONTRL+6,1
  DPOKE CONTRL+8,33
  DPOKE INTIN,ind%
  VDISYS 130
  i.ntout%=LPEEK(&H294A)
  *fc%=DPEEK(i.ntout%)
  FOR i%=0 TO 31
    nm$=nm$+CHR$(PEEK(i.ntout%+3+i%*2))
  NEXT i%
  *f.n%=nm$
RETURN
