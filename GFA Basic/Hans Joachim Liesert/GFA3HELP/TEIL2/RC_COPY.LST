' RC_COPY - Beispiel:
'
PRINT " 32 KByte-Bilddatei wÑhlen"
FILESELECT "\*.*","",f$
CLS
IF EXIST(f$)
OPEN "i",#1,f$
bild$=INPUT$(32000,#1)
CLOSE #1
s%=V:bild$
d%=XBIOS(2)
FOR i%=-90 TO 269
x%=150+SINQ(i%)*140
y%=100+COSQ(i%)*80
RC_COPY s%,i%+90,0,1,50 TO d%,x%,y%
' @Rc_copy(S%,I%+90,0,1,50,D%,X%,Y%,3) ! fÅr V2.xx (@RC_COPY() einbinden)
NEXT i%
PAUSE 50
CLS
FOR j%=70 TO 90 STEP 10
FOR i%=0 TO 359 STEP 10
x%=150+SINQ(i%)*j%
y%=100+COSQ(i%)*j%
RC_COPY s%,x%,y%,18,18 TO d%,x%,y%
' @Rc_copy(S%,X%,Y%,18,18,D%,X%,Y%,3) ! fÅr V2.xx (@RC_COPY() einbinden)
NEXT i%
NEXT j%
PAUSE 50
CLS
FOR i%=0 TO 79
FOR j%=i% TO 79-i%
j2%=j%*8
i2%=i%*8
j3%=j%*5
i3%=i%*5
' 4 mal V2.xx-Aufrufe ->  fÅr V2.xx (@RC_COPY() einbinden)
' @Rc_copy(S%,J2%-I2%,J3%+I3%,8,5,D%,J2%-I2%,J3%+I3%,3)
' @Rc_copy(S%,J2%+I2%,J3%-I3%,8,5,D%,J2%+I2%,J3%-I3%,3)
' @Rc_copy(S%,J2%,J3%-I3%,8,5,D%,J2%,J3%-I3%,3)
' @Rc_copy(S%,J2%,J3%+I3%,8,5,D%,J2%,J3%+I3%,3)
RC_COPY s%,j2%-i2%,j3%+i3%,8,5 TO d%,j2%-i2%,j3%+i3%
RC_COPY s%,j2%+i2%,j3%-i3%,8,5 TO d%,j2%+i2%,j3%-i3%
RC_COPY s%,j2%,j3%-i3%,8,5 TO d%,j2%,j3%-i3%
RC_COPY s%,j2%,j3%+i3%,8,5 TO d%,j2%,j3%+i3%
NEXT j%
NEXT i%
CLS
PRINT "Maus bewegen und Buttons drÅcken"
DO
MOUSE x%,y%,k%
VSYNC
VSYNC
RC_COPY s%,x%,y%,50,50 TO d%,x%,y%,3*MOUSEK
' @Rc_copy(S%,X%,Y%,50,50,D%,X%,Y%,3*Mousek) !  @RC_COPY() einbinden
VSYNC
VSYNC
RC_COPY s%,x%,y%,50,50 TO d%,x%,y%,3*MOUSEK
' @Rc_copy(S%,X%,Y%,50,50,D%,X%,Y%,3*Mousek) ! @RC_COPY() einbinden
LOOP
ENDIF
