' STICK() -Beispiel:
'
' Dieses Beispiel erwartet, daû ein Joystick in Port 0
' (eigentlich Mausport) angeschlossen ist.
'
CIRCLE 7,7,6
CIRCLE 7,7,4
LINE 1,7,13,7
LINE 7,1,7,13
GET 0,0,15,15,a$
x%=160
y%=100
ON BREAK GOSUB ende
STICK 1   ! fÅr V3.0
' in V2.xx hier: OUT 4,20
DO
  PRINT AT(1,1);"  ";AT(1,1);
  IF STICK(0) AND 1
    ' in V2.xx: If Peek(3592) And 1
    y%=MAX(0,y%-1)
    OUT 5,1
  ENDIF
  IF STICK(0) AND 2
    ' in V2.xx: If Peek(3592) And 2
    y%=MIN(199,y%+1)
    OUT 5,2
  ENDIF
  IF STICK(0) AND 4
    ' in V2.xx: If Peek(3592) And 4
    x%=MAX(0,x%-1)
    OUT 5,4
  ENDIF
  IF STICK(0) AND 8
    ' in V2.xx: If Peek(3592) And 8
    x%=MIN(319,x%+1)
    OUT 5,3
  ENDIF
  VSYNC
  IF STRIG(0)
    ' in V2.xx: If Peek(3592) And 128
    PRINT AT(1,1);"Feuer "
    FOR i%=0 TO 6
      CIRCLE x%+7,y%+7,i%
    NEXT i%
    PRINT AT(1,1);"      "
  ENDIF
  PUT x%,y%,a$
LOOP
PROCEDURE ende
  STICK 0   ! fÅr V3.0
  ' in V2.xx hier: OUT 4,8
  EDIT
RETURN
