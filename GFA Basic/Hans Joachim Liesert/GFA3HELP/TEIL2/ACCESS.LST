DEFFILL ,2,2
PBOX 10,10,630,390
PRINT "Maustaste drÅcken"
DO
REPEAT
UNTIL MOUSEK
@access("ACCESSORY"," ZURöCK ZUM PROGRAMM")
LOOP
PROCEDURE access(ac.titel$,ac.exit$)
LOCAL m.i%,m.bg$
PAUSE 6
SGET m.bg$
FOR m.i%=XBIOS(2)+160 TO XBIOS(2)+1520 STEP 160
BMOVE VARPTR(m.bg$),m.i%,MAX(1,32000-(m.i%-XBIOS(2)))
NEXT m.i%
DIM m_feld$(10)
m_feld$(0)=ac.titel$
m_feld$(1)=ac.exit$
m_feld$(2)="------------------------"
FOR m.i%=3 TO 8
m_feld$(m.i%)="  "
NEXT m.i%
m_feld$(9)=""
m_feld$(10)=""
MENU m_feld$()
ON MENU GOSUB acc_menue_xxx
DO
ON MENU
EXIT IF m_feld$(MENU(0))=ac.exit$
LOOP
MENU KILL
FOR m.i%=XBIOS(2)+1520 TO XBIOS(2)+160 STEP -160
BMOVE VARPTR(m.bg$),m.i%,MAX(1,32000-(m.i%-XBIOS(2)))
NEXT m.i%
SPUT m.bg$
ERASE m_feld$()
RETURN
PROCEDURE acc_menue_xxx
MENU OFF
RETURN
