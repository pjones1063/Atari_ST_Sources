ON BREAK GOSUB break
RESERVE 10000
a%=VST_LOAD_FONTS(0)
GRAPHMODE 3
DO
  FOR j%=1 TO a%+1
    font%=VQT_NAME(j%,a$)
    CLS
    DEFTEXT ,21,,26,font%
    ~VQT_EXTENT(a$)
    breite%=PTSOUT(4)
    hoehe%=PTSOUT(5)
    PRINT AT(1,15);"Breite : ";breite%''"H”he : ";hoehe%''''''
    x%=100
    y%=100
    TEXT x%,y%,a$
    FOR i%=0 TO 60 STEP 1
      BOX x%-i%,y%-hoehe%-i%,x%+breite%+i%,y%+i%
    NEXT i%
    FOR i%=60 TO 0 STEP -2
      BOX x%-i%,y%-hoehe%-i%,x%+breite%+i%,y%+i%
    NEXT i%
  NEXT j%
LOOP
PROCEDURE break
  ~VST_UNLOAD_FONTS(0)
  ON BREAK
  RESERVE
  EDIT
RETURN
