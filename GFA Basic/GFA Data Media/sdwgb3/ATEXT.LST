' ATEXT.LST
'
PRINT AT(1,1);BIN$(t%,5);
TEXT 10,40,"TEXT command"
REPEAT
  IF MOUSEK=1 AND MOUSEY<16 AND MOUSEX<40
    CLS
    t%=BCHG(t%,4-DIV(MOUSEX,8))
    PRINT AT(1,1);BIN$(t%,5);
    DEFTEXT 1,t%,0,13
    TEXT 10,40,"TEXT command"
    ATEXT 100,100,2,"ATEXT is not influenced by DEFTEXT !"
    ATEXT 100,130,0,"(RIGHT MOUSEKEY FOR END OF PROGRAM)"
    REPEAT
    UNTIL MOUSEK=0
  ENDIF
UNTIL MOUSEK=2
