PROCEDURE bestimme_zeilenbreite
  @teste_breite   !  Nr. der gesetzten Zeichenbreitetaste bestimmen
  IF breite%=11 OR breite%=12
    IF drucker%
      ALERT 1," Wortweise Trennung ist | bei Proportionalschrift | leider nicht mîglich !",1," schade ",antwort
      @invertiere(31)  !  wieder aus
    ELSE
      ALERT 1," Die Bestimmung der TextlÑnge | ist bei Proportionalschrift | leider nicht mîglich!",1,"schade",antwort
      chars%=0
    ENDIF
  ELSE
    IF breite%=3
      cpi%=5
    ELSE
      IF breite%=4
        cpi%=7.5
      ELSE
        IF breite%=5 OR breite%=13
          cpi%=10
        ELSE
          IF breite%=6 OR breite%=7
            cpi%=12
          ELSE
            IF breite%=8
              cpi%=15
            ELSE
              IF breite%=9
                cpi%=17
              ELSE
                IF breite%=10
                  cpi%=20
                ENDIF
              ENDIF
            ENDIF
          ENDIF
        ENDIF
      ENDIF
    ENDIF
    chars%=cpi%*8-taste%(18,6)*cpi%-taste%(21,6)*cpi%-taste%(19,6)*4.2*cpi%-taste%(22,6)*4.2*cpi%+0.1  !  Zeichen pro Zeile
  ENDIF
