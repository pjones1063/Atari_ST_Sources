PROCEDURE lade_datei
  REPEAT
    FILESELECT pfad$,"",filename$
    exis=EXIST(filename$)
    IF LEN(filename$)>0 AND NOT exis
      ALERT 3," |  Diese Datei existiert nicht  |  im ausgewÑhlten Suchpfad!",1,"nochmal",wahl
    ENDIF
  UNTIL LEN(filename$)=0 OR exis
RETURN
