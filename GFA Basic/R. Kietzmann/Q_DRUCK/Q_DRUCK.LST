PROCEDURE control.scr            !  Mauskontrolle
  DO
    REPEAT
      MOUSE x,y,k
    UNTIL k>0
    IF x>5 AND x<80 AND y>45 AND y<75    ! >>>>> LQ
      IF taste%(2,6)=1
        @invertiere(2)  ! Draft lîschen
      ENDIF
      IF taste%(1,6)=0
        @invertiere(1)  ! LQ setzen
        IF taste%(31,6)=1
          @invertiere(31)  !  Trennung wortweise aus
        ENDIF
        LPRINT esc$+"x"+CHR$(1);
        IF taste%(7,6)=1  !  HS12 CPI geht in 12 CPI normal Åber
          LPRINT CHR$(18)+esc$+"W"+CHR$(0)+esc$+"M"; !  setze 12 CPI
          @invertiere(7)  !  HS12 CPI-Taste aus
          @invertiere(6)  !  12 CPI-Taste ein
        ENDIF
      ENDIF
    ENDIF
    IF x>85 AND x<161 AND y>45 AND y<75   ! >>>>> Draft
      IF taste%(1,6)=1
        @invertiere(1)  !  LQ lîschen
      ENDIF
      IF taste%(2,6)=0
        @invertiere(2)  !  Draft setzen
        IF taste%(31,6)=1
          @invertiere(31)  !  Trennung wortweise aus
        ENDIF
        LPRINT esc$+"x"+CHR$(0);
        IF taste%(11,6)=1 OR taste%(12,6)=1  !  Prop. geht in 10 CPI normal Åber
          LPRINT CHR$(18)+esc$+"W"+CHR$(0)+esc$+"p"+CHR$(0)+esc$+"P"; !  setze 10 CPI
          @teste_breite
          IF breite%<13
            @invertiere(breite%)  !  prop. abschalten
          ENDIF
          @invertiere(5)  !  10 CPI-Taste ein
        ENDIF
      ENDIF
    ENDIF
    IF x>5 AND x<80 AND y>130 AND y<160   ! >>>>> CPI 5
      @teste_breite
      IF breite%<>3   ! Tastennummer
        IF breite%<13 ! Åberhaupt schon eine Taste aktiviert?
          @invertiere(breite%)   ! alte Breite abschalten
        ENDIF
        @invertiere(3)  !  5 CPI einschalten
        IF taste%(31,6)=1
          @invertiere(31)  !  Trennung wortweise aus
        ENDIF
        @setze5cpi
      ENDIF
    ENDIF
    IF x>5 AND x<80 AND y>165 AND y<195   !  >>>>> CPI 7
      @teste_breite
      IF breite%<>4   ! Tastennummer
        IF breite%<13 ! Åberhaupt schon eine Taste aktiviert?
          @invertiere(breite%)   ! alte Breite abschalten
        ENDIF
        @invertiere(4)  !  7.5 CPI einschalten
        IF taste%(31,6)=1
          @invertiere(31)  !  Trennung wortweise aus
        ENDIF
        @setze7cpi
      ENDIF
    ENDIF
    IF x>5 AND x<80 AND y>200 AND y<230   ! >>>>> CPI 10
      @teste_breite
      IF breite%<>5   ! Tastennummer
        IF breite%<13 ! Åberhaupt schon eine Taste aktiviert?
          @invertiere(breite%)   ! alte Breite abschalten
        ENDIF
        @invertiere(5)  !  10 CPI einschalten
        IF taste%(31,6)=1
          @invertiere(31)  !  Trennung wortweise aus
        ENDIF
        @setze10cpi
      ENDIF
    ENDIF
    IF x>5 AND x<80 AND y>235 AND y<266   ! >>>>> CPI 12
      @teste_breite
      IF breite%<>6   ! Tastennummer
        IF breite%<13 ! Åberhaupt schon eine Taste aktiviert?
          @invertiere(breite%)   ! alte Breite abschalten
        ENDIF
        @invertiere(6)  !  12 CPI einschalten
        IF taste%(31,6)=1
          @invertiere(31)  !  Trennung wortweise aus
        ENDIF
        @setze12cpi
      ENDIF
    ENDIF
    IF x>5 AND x<80 AND y>270 AND y<299   ! >>>>> HS12 CPI
      @teste_breite
      IF breite%<>7  !  Tastennummer
        IF breite%<13  ! denn sonst ist noch keine Taste aktiviert
          @invertiere(breite%)  !  alte Breite abschalten
        ENDIF
        @invertiere(7)  !  HS12 CPI einschalten
        IF taste%(31,6)=1
          @invertiere(31)  !  Trennung wortweise aus
        ENDIF
        @setzehs12cpi
        IF taste%(1,6)=1
          @invertiere(1)  !  LQ aus
        ENDIF
        IF taste%(2,6)=0
          @invertiere(2)  !  Draft ein
        ENDIF
      ENDIF
    ENDIF
    IF x>85 AND x<160 AND y>130 AND y<160   ! >>>>> CPI 15
      @teste_breite
      IF breite%<>8   ! Tastennummer
        IF breite%<13 ! Åberhaupt schon eine Taste aktiviert?
          @invertiere(breite%)   ! alte Breite abschalten
        ENDIF
        @invertiere(8)  !  15 CPI einschalten
        IF taste%(31,6)=1
          @invertiere(31)  !  Trennung wortweise aus
        ENDIF
        @setze15cpi
      ENDIF
    ENDIF
    IF x>85 AND x<160 AND y>165 AND y<195   ! >>>>> CPI 17
      @teste_breite
      IF breite%<>9   ! Tastennummer
        IF breite%<13 ! Åberhaupt schon eine Taste aktiviert?
          @invertiere(breite%)   ! alte Breite abschalten
        ENDIF
        @invertiere(9)  !  17 CPI einschalten
        IF taste%(31,6)=1
          @invertiere(31)  !  Trennung wortweise aus
        ENDIF
        @setze17cpi
      ENDIF
    ENDIF
    IF x>85 AND x<160 AND y>200 AND y<229   ! >>>>> CPI 20
      @teste_breite
      IF breite%<>10   ! Tastennummer
        IF breite%<13 ! Åberhaupt schon eine Taste aktiviert?
          @invertiere(breite%)   ! alte Breite abschalten
        ENDIF
        @invertiere(10)  !  20 CPI einschalten
        IF taste%(31,6)=1
          @invertiere(31)  !  Trennung wortweise aus
        ENDIF
        @setze20cpi
      ENDIF
    ENDIF
    IF x>85 AND x<160 AND y>235 AND y<265   ! >>>>> Proportional
      @teste_breite
      IF breite%<>11   ! Tastennummer
        IF breite%<13 ! Åberhaupt schon eine Taste aktiviert?
          @invertiere(breite%)   ! alte Breite abschalten
        ENDIF
        IF taste%(2,6)=1  ! Draft gesetzt?
          @invertiere(2)  ! Draft abschalten
        ENDIF
        IF taste%(1,6)=0
          @invertiere(1) ! LQ setzen
          LPRINT esc$+"x"+CHR$(1);
        ENDIF
        IF taste%(31,6)=1
          @invertiere(31)  ! Wortweise Trennung abschalten
        ENDIF
        @invertiere(11)  !  Proportional einschalten
        @setzeprop
      ENDIF
    ENDIF
    IF x>85 AND x<160 AND y>270 AND y<300   ! >>>>> Proportional schmal
      @teste_breite
      IF breite%<>12   ! Tastennummer
        IF breite%<13 ! Åberhaupt schon eine Taste aktiviert?
          @invertiere(breite%)   ! alte Breite abschalten
        ENDIF
        IF taste%(2,6)=1  ! Draft gesetzt?
          @invertiere(2)  ! Draft abschalten
        ENDIF
        IF taste%(1,6)=0
          @invertiere(1) ! LQ setzen
          LPRINT esc$+"x"+CHR$(1);
        ENDIF
        IF taste%(31,6)=1
          @invertiere(31)  !  Wortweise Trennung abschalten
        ENDIF
        @invertiere(12)  !  15 CPI einschalten
        @setzepropcnd
      ENDIF
    ENDIF
    IF x>5 AND x<81 AND y>350 AND y<370   ! >>>>> 4 LPI
      IF taste%(13,6)=0
        IF taste%(14,6)=1
          @invertiere(14)  ! andere Einstellung aus
        ELSE
          IF taste%(15,6)=1
            @invertiere(15)
          ELSE
            IF taste%(16,6)=1
              @invertiere(16)
            ENDIF
          ENDIF
        ENDIF
        @invertiere(13)
        LPRINT esc$+"A"+CHR$(15);
        IF taste%(25,6)=1  !  Perforationssprung neu setzen
          LPRINT esc$+"N"+CHR$(4);
        ENDIF
      ENDIF
    ENDIF
    IF x>5 AND x<80 AND y>375 AND y<395   ! >>>>> 6 LPI
      IF taste%(14,6)=0
        IF taste%(13,6)=1
          @invertiere(13)  ! andere Einstellung aus
        ELSE
          IF taste%(15,6)=1
            @invertiere(15)
          ELSE
            IF taste%(16,6)=1
              @invertiere(16)
            ENDIF
          ENDIF
        ENDIF
        @invertiere(14)
        LPRINT esc$+"2";
        IF taste%(25,6)=1  !  Perforationssprung neu setzen
          LPRINT esc$+"N"+CHR$(6);
        ENDIF
      ENDIF
    ENDIF
    IF x>85 AND x<161 AND y>350 AND y<371   ! >>>>> 8 LPI
      IF taste%(15,6)=0
        IF taste%(13,6)=1
          @invertiere(13)  ! andere Einstellung aus
        ELSE
          IF taste%(14,6)=1
            @invertiere(14)
          ELSE
            IF taste%(16,6)=1
              @invertiere(16)
            ENDIF
          ENDIF
        ENDIF
        @invertiere(15)
        LPRINT esc$+"0";
        IF taste%(25,6)=1 THEN  !  Perforationssprung neu setzen
          LPRINT esc$+"N"+CHR$(8);
        ENDIF
      ENDIF
    ENDIF
    IF x>85 AND x<162 AND y>375 AND y<396   ! >>>>> 10 LPI
      IF taste%(16,6)=0
        IF taste%(13,6)=1
          @invertiere(13)  ! andere Einstellung aus
        ELSE
          IF taste%(14,6)=1
            @invertiere(14)
          ELSE
            IF taste%(15,6)=1
              @invertiere(15)
            ENDIF
          ENDIF
        ENDIF
        @invertiere(16)
        LPRINT esc$+"A"+CHR$(6);
        IF taste%(25,6)=1  !  Perforationssprung neu setzen
          LPRINT esc$+"N"+CHR$(10);
        ENDIF
      ENDIF
    ENDIF
    IF x>185 AND x<260 AND y>45 AND y<75   ! >>>>> linker Rand normal
      IF taste%(17,6)=0
        @setze_links_normal
        IF taste%(31,6)=1
          @invertiere(31)  !  Trennung wortweise aus
        ENDIF
      ENDIF
    ENDIF
    IF x>185 AND x<261 AND y>80 AND y<110   ! >>>>> linker Rand +1"
      IF taste%(18,6)=0
        IF taste%(17,6)=1
          @invertiere(17)
        ELSE
          IF taste%(19,6)=1
            @invertiere(19)
          ENDIF
        ENDIF
        @invertiere(18) ! setze links +1"
        IF taste%(31,6)=1
          @invertiere(31)  !  Trennung wortweise aus
        ENDIF
        @teste_breite ! Zeichenbreite sichern
        @setze10cpi
        LPRINT esc$+"l"+CHR$(10); ! setze Rand
        ON breite%-2 GOSUB setze5cpi,setze7cpi,setze10cpi,setze12cpi,setzehs12cpi,setze15cpi,setze17cpi,setze20cpi,setzeprop,setzepropcnd
      ENDIF
    ENDIF
    IF x>185 AND x<261 AND y>115 AND y<145   ! >>>>> linker Rand auf HÑlfte
      IF taste%(19,6)=0
        IF taste%(22,6)=1 ! rechten Rand Ñndern falls auf HÑlfte
          @setze_rechts_normal
        ENDIF
        IF taste%(17,6)=1
          @invertiere(17)
        ELSE
          IF taste%(18,6)=1
            @invertiere(18)
          ENDIF
        ENDIF
        @invertiere(19) ! setze links auf HÑlfte
        IF taste%(31,6)=1
          @invertiere(31)  !  Trennung wortweise aus
        ENDIF
        @teste_breite ! Zeichenbreite sichern
        @setze10cpi
        LPRINT esc$+"l"+CHR$(42); ! setze Rand
        ON breite%-2 GOSUB setze5cpi,setze7cpi,setze10cpi,setze12cpi,setzehs12cpi,setze15cpi,setze17cpi,setze20cpi,setzeprop,setzepropcnd
      ENDIF
    ENDIF
    IF x>264 AND x<340 AND y>46 AND y<76   ! >>>>> rechter Rand normal
      IF taste%(20,6)=0
        @setze_rechts_normal
        IF taste%(31,6)=1
          @invertiere(31)  !  Trennung wortweise aus
        ENDIF
      ENDIF
    ENDIF
    IF x>265 AND x<340 AND y>80 AND y<110   ! >>>>> rechter Rand -1"
      IF taste%(21,6)=0
        IF taste%(20,6)=1
          @invertiere(20)
        ELSE
          IF taste%(22,6)=1
            @invertiere(22)
          ENDIF
        ENDIF
        @invertiere(21) ! setze rechts -1"
        IF taste%(31,6)=1
          @invertiere(31)  !  Trennung wortweise aus
        ENDIF
        @teste_breite ! Zeichenbreite sichern
        @setze10cpi
        LPRINT esc$+"Q"+CHR$(70); ! setze Rand
        ON breite%-2 GOSUB setze5cpi,setze7cpi,setze10cpi,setze12cpi,setzehs12cpi,setze15cpi,setze17cpi,setze20cpi,setzeprop,setzepropcnd
      ENDIF
    ENDIF
    IF x>265 AND x<340 AND y>115 AND y<145   ! >>>>> rechter Rand auf HÑlfte
      IF taste%(22,6)=0
        IF taste%(19,6)=1 ! linken Rand Ñndern falls HÑlfte
          @setze_links_normal
        ENDIF
        IF taste%(20,6)=1
          @invertiere(20)
        ELSE
          IF taste%(21,6)=1
            @invertiere(21)
          ENDIF
        ENDIF
        @invertiere(22) ! setze rechts auf HÑlfte
        IF taste%(31,6)=1
          @invertiere(31)  !  Trennung wortweise aus
        ENDIF
        @teste_breite ! Zeichenbreite sichern
        @setze10cpi
        LPRINT esc$+"Q"+CHR$(38); ! setze Rand
        ON breite%-2 GOSUB setze5cpi,setze7cpi,setze10cpi,setze12cpi,setzehs12cpi,setze15cpi,setze17cpi,setze20cpi,setzeprop,setzepropcnd
      ENDIF
    ENDIF
    IF x>185 AND x<262 AND y>200 AND y<226   ! >>>>> LF
      @invertiere(23)
      LPRINT CHR$(10);
      @warte(20)
      @invertiere(23)
    ENDIF
    IF x>265 AND x<340 AND y>200 AND y<225   ! >>>>> RLF
      @invertiere(24)
      LPRINT fs$+"R"+CHR$(10)+fs$+"F";
      @warte(20)
      @invertiere(24)
    ENDIF
    IF x>185 AND x<340 AND y>230 AND y<255   ! >>>>> FF
      @invertiere(42)
      LPRINT CHR$(12);
      @warte(20)
      @invertiere(42)
    ENDIF
    IF x>185 AND x<260 AND y>275 AND y<300   ! >>>>> Perforationssprung ein
      IF taste%(25,6)=0
        IF taste%(26,6)=1
          @invertiere(26)
        ENDIF
        @invertiere(25)
        LPRINT esc$+"N"+CHR$(8);  !  vermutl. Standardeinstellung
        IF taste%(13,6)=1
          LPRINT esc$+"N"+CHR$(4);
        ELSE
          IF taste%(14,6)=1
            LPRINT esc$+"N"+CHR$(6);
          ELSE
            IF taste%(16,6)=1
              LPRINT esc$+"N"+CHR$(10);
            ENDIF
          ENDIF
        ENDIF
      ENDIF
    ENDIF
    IF x>265 AND x<340 AND y>275 AND y<300   ! >>>>> Perforationssprung aus
      IF taste%(26,6)=0
        IF taste%(25,6)=1
          @invertiere(25)
        ENDIF
        @invertiere(26)
        LPRINT esc$+"O";
      ENDIF
    ENDIF
    IF x>185 AND x<260 AND y>351 AND y<371   ! >>>>> links justiert
      IF taste%(27,6)=0
        IF taste%(28,6)=1
          @invertiere(28)
        ELSE
          IF taste%(29,6)=1 THEN
            @invertiere(29)
          ELSE
            IF taste%(30,6)=1
              @invertiere(30)
            ENDIF
          ENDIF
        ENDIF
        @invertiere(27)
        LPRINT esc$+"a"+CHR$(0);
