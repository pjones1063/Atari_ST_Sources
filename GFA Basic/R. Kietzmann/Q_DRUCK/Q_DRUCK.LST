PROCEDURE schreibe_dateiname   !  bringt Dateinamen und -lÑnge ins Fenster
  i%=LEN(filename$)+1
  REPEAT
    i%=i%-1
  UNTIL MID$(filename$,i%,1)="\" OR MID$(filename$,i%,1)=":" OR i%=0
  dateiname_solo$=RIGHT$(filename$,LEN(filename$)-i%)
  IF LEN(filename$)>0 AND MID$(filename$,2,1)=":"
    pfad$=LEFT$(filename$,i%)+"*.*"
  ENDIF
  GRAPHMODE 1
  DEFTEXT 1,0,0,13
  TEXT 490,52,"             "
  TEXT 490,52,dateiname_solo$
  IF LEN(filename$)>0
    OPEN "I",#1,filename$
    dateilaenge%=LOF(#1)
    CLOSE #1
  ELSE
    dateilaenge%=0
  ENDIF
  TEXT 490,72,"                "
  TEXT 490,72,STR$(dateilaenge%)+" Bytes"
  TEXT 480,92,"                  "
RETURN
