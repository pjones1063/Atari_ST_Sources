PROCEDURE shadow.box(x%,y%,w%,h%,fstyle%,findex%)
  IF x%>w%
    SWAP x%,w%
  ENDIF
  IF y%>h%
    SWAP y%,h%
  ENDIF
  DEFFILL 1,1
  PBOX x%+2,h%,w%+2,h%+2
  PBOX w%,y%+2,w%+2,h%
  IF fstyle%=4
    BOX x%,y%,w%,h%
  ELSE
    DEFFILL 1,fstyle%,findex%
    PBOX x%,y%,w%,h%
  ENDIF
RETURN
' ..............................................................................
