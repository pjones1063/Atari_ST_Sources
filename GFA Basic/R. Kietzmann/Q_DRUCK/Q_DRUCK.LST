PROCEDURE double.box(x%,y%,w%,h%,fstyle%,findex%)
  IF x%>w%
    SWAP x%,w%
  ENDIF
  IF y%>h%
    SWAP y%,h%
  ENDIF
  IF fstyle%=4
    BOX x%,y%,w%,h%
    BOX x%+2,y%+2,w%-2,h%-2
  ELSE
    DEFFILL 1,0
    PBOX x%,y%,w%,h%
    DEFFILL 1,fstyle%,findex%
    PBOX x%+2,y%+2,w%-2,h%-2
  ENDIF
RETURN
