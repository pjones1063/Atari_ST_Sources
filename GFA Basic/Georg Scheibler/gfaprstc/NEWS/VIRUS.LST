DO
  ALERT 1,"Disk in A: einlegen",1,"Ok",a%
  a$=SPACE$(512)
  DO
    e%=XBIOS(8,L:VARPTR(a$),L:0,0,1,0,0,1)
    EXIT IF e%>=0
    PRINT "Lesefehler ";e%;"   Taste drÅcken (ESC=Abbruch)"
    IF INP(2)=27
      END
    ENDIF
  LOOP
  IF ASC(a$)=&H60
    PRINT "Diskette infiziert oder bootfÑhig"
    ALERT 3,"Diskette infiziert|oder bootfÑhig",1,"Lîschen|Weiter",x%
    IF x%=1
      MID$(a$,1)=STRING$(6,0)
      MID$(a$,59)=STRING$(512,&HE5)
      VOID XBIOS(18,L:VARPTR(a$),L:-1,-1,0)
      REPEAT
        e%=XBIOS(9,L:VARPTR(a$),L:0,0,1,0,0,1)
        EXIT IF e%>=0
        PRINT "Schreibfehler ";e%;"   Taste drÅcken (ESC=Abbruch)"
      UNTIL INP(2)=27
    ENDIF
  ELSE
    PRINT "Disk sieht normal aus"
  ENDIF
LOOP
