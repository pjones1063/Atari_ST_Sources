Procedure Do_scan
  @Rahmung(0)
  Urbild$=Space$(Int((W(34)*W(35)+1)/2))
  Local A,B,X,Y,Z%,A$
  Lprint Dr$(27);
  Z%=0
  For Y=0 To (W(35)-1)
    For X=0 To (W(34)-1)
      A=B
      @Delay(W(31))
      B=Peek(Int(W(23)))
      Lprint Dr$(28)
      If Z%>=1
        Z%=0
        Mid$(Urbild$,(Y*W(34)+X)/2)=Chr$((A+B*16) And 255)
      Else
        Inc Z%
      Endif
      @Putpix(X*2,Y*2,2,2,B*16)
      A$=Inkey$
      Exit If A$=Chr$(27)
    Next X
    Lprint Dr$(29)
    @Delay(W(32))
    Exit If A$=Chr$(27)
  Next Y
  Lprint Dr$(30)
  @Rahmung(1)
Return
