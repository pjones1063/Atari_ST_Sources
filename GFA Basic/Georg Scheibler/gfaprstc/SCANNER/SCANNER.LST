Procedure Textedit(X,Y,Lmax,A$,Z)
  Local B$,L,P,B,C
  L=Len(A$)
  P=L+1
  Do
    Print At(X,Y);A$;" "
    Print Chr$(27);"p";
    If L>0 And P<=L
      Print At(X+P-1,Y);Mid$(A$,P,1);
      Print Chr$(27);"q";
    Else
      Print At(X+P-1,Y);" ";
      Print Chr$(27);"q";
      Print At(X+P,Y);" ";
    Endif
    C=Bios(2,2)
    B=C And 255
    B$=Chr$(B)
    C=C/&H10000 And 255
    Exit If B=13 Or B=27
    If B=127 And L>0 And P<=L
      A$=Left$(A$,P-1)+Right$(A$,L-P)
      L=Len(A$)
    Endif
    If B=8 And P>1 And L>0
      A$=Left$(A$,P-2)+Right$(A$,L-P+1)
      L=Len(A$)
      Dec P
    Endif
    If C=75 And P>1
      Dec P
    Endif
    If C=77 And P<=L
      Inc P
    Endif
    If B=9
      P=L+1
    Endif
    If ((B>31 And B<>127 And Z<>-1) Or (B>44 And B<58 And B<>47 And Z=-1)) And Lmax>L
      If L>=P
        A$=Left$(A$,P-1)+B$+Right$(A$,L-P+1)
      Else
        A$=A$+B$
      Endif
      L=Len(A$)
      Inc P
    Endif
  Loop
  Print At(X,Y);A$;" ";
  Rueck$=A$
Return
