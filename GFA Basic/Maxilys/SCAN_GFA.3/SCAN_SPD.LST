' OPEN "o",#99,"F:\spd_lst.txt"
DO
  FILESELECT #"DOSSIER ¶ SCANNER","\*.SPD","",chem$
  EXIT IF chem$=""
  IF RIGHT$(chem$)<>"\"
    a%=RINSTR(chem$,"\")
    chem$=LEFT$(chem$,a%)
  ENDIF
  PRINT ''chem$
  ' PRINT #99,''chem$
  scan_spd
LOOP
' CLOSE #99
'
> PROCEDURE scan_spd
  ~FSETDTA(BASEPAGE+128)
  a%=FSFIRST(chem$+"*.SPD",0)
  DO UNTIL a%
    nom$=CHAR{BASEPAGE+158}
    PRINT nom$;TAB(12);"|";
    ' PRINT #99,nom$;TAB(12);"|";
    titre_spd
    a%=FSNEXT()
  LOOP
RETURN
> PROCEDURE titre_spd
  LOCAL tit$
  OPEN "i",#1,chem$+nom$
  SEEK #1,24                    ! nom de la police est en +24
  tit$=STRING$(71,0)
  BGET #1,V:tit$,70             ! et a priori ya 70 char au maximum?
  tit$=CHAR{V:tit$}
  '
  PRINT STR$(LOF(#1),7);"|";tit$
  ' PRINT #99,STR$(LOF(#1),7);"|";tit$
  CLOSE #1
RETURN
