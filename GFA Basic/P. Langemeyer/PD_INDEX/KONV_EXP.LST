' KONV_EXP.BAS
'
' *********************************************************
' *   Importdateien fÅr andere Datenbanken konvertieren   *
' *                P. Langemeyer, 19.1.92                 *
' *********************************************************
'
Titlew 1,"Importdatei fÅr andere Datenbanken konvertieren"
Ordner$="\"
'
Infow 1,"   Info-Datei KONV_EXP.INF lesen"
Fullw 1
Print At(1,1)
Dim Trenn$(20)
Trennz%=0
Del%=8192
Deffill 1,2,4
Sp$=" "
Cr$=Chr$(13)
Lf$=Chr$(10)
'
Datei$=Chr$(Gemdos(25)+65)+":"+Dir$(0)+"\KONV_EXP.INF"
' Datei$="D:\KONV_EXP\KONV_EXP.INF"
If Not Exist(Datei$)
  Print "     Die Infodatei KONV_EXP.INF fehlt! - Abbruch!"
  Print
  Print "            < weiter mit beliebiger Taste >"
  Z$=Input$(1)
  End
Endif
'
Open "I",#1,Datei$
Daa%=0
Dae%=Lof(#1)
D$=""
Da%=0
'
@Zeile               ! Datenbanknamen
Datenbank$=Zeile$
Titlew 1,"Importdatei fÅr Datenbank "+Chr$(34)+Datenbank$+Chr$(34)+" konvertieren"
Infow 1,"     Info-Datei der Datenbank "+Datenbank$+" :"
Clearw 1
Print At(1,3);
Print "     Datenbank:               ";Datenbank$
Print
'
@Zeile               ! Zahl der Felder je Satz
Zf%=Val(Zeile$)
Print "     Zahl der Felder je Satz: ";Zf%
Print
Dec Zf%
'
@Zeile               ! Extention fÅr Zieldatei
Extention$=Left$(Zeile$,3)
Print "     Extention der Zieldatei: ";Extention$
Print
'
@Zeile               ! Feldtrenner
K%=0
Ft$=""
Feldtr$=""
L%=Instr(1,Zeile$,",")
If L%=0
  Print "     Ein Feldtrenner sollte schon angegeben sein !"
  Print
  Print "            < weiter mit beliebiger Taste >"
  Z$=Input$(1)
  End
Endif
Repeat
  Z$=Chr$(Val(Mid$(Zeile$,K%,L%-K%)))
  Inc Trennz%
  Trenn$(Trennz%)=Z$
  Ft$=Ft$+Z$
  If Z$=Cr$
    Z$="<CR>"
    Dec Trennz%
  Endif
  If Z$=Lf$
    Z$="<LF>"
    Dec Trennz%
  Endif
  Feldtr$=Feldtr$+Z$
  K%=L%+1
  L%=Instr(K%,Zeile$,",")
Until L%=0
Print "     Feldtrenner:             ";Chr$(34);Feldtr$;Chr$(34)
Print
'
@Zeile               ! Satztrenner
K%=0
St$=""
Satztr$=""
L%=Instr(1,Zeile$,",")
If L%=0
  Print "     Ein Satztrenner sollte schon angegeben sein !"
  Print
  Print "            < weiter mit beliebiger Taste >"
  Z$=Input$(1)
  End
Endif
Repeat
  Z$=Chr$(Val(Mid$(Zeile$,K%,L%-K%)))
  Inc Trennz%
  Trenn$(Trennz%)=Z$
  St$=St$+Z$
  If Z$=Cr$
    Z$="<CR>"
    Dec Trennz%
  Endif
  If Z$=Lf$
    Z$="<LF>"
    Dec Trennz%
  Endif
  Satztr$=Satztr$+Z$
  K%=L%+1
  L%=Instr(K%,Zeile$,",")
Until L%=0
Print "     Satztrenner:             ";Chr$(34);Satztr$;Chr$(34)
Print
Print
Print
Print "            < weiter mit beliebiger Taste >"
Print
Print
'
Close #1
Z$=Input$(1)
'
Do
  Clearw 1
  Infow 1,"     Importdatei selektieren bzw. Ende durch <ABBRUCH>"
  '
  Repeat
    Fileselect Ordner$+"*.EXP","",Datei$
    If Datei$=""
      Closew 1
      End
    Endif
  Until Exist(Datei$)
  For I%=Len(Datei$) To 1 Step -1
    Exit If Mid$(Datei$,I%,1)="\"
  Next I%
  Ordner$=Left$(Datei$,I%)
  '
  Zdatei$=Left$(Datei$,Len(Datei$)-3)+Extention$
  Infow 1,"     Importdatei "+Datei$+" ===> "+Zdatei$
  Open "I",#1,Datei$
  Open "O",#2,Zdatei$
  Daa%=0
  Dae%=Lof(#1)
  '
  Box 40,100,600,150
  '
  D$=""
  Da%=0
  Do
    Satz$=""
    @Zeile                     ! 1. Feld
    Exit If Dad%=0             ! Ende der Datei erreicht!
    For I%=1 To Zf%
      Satz$=Satz$+Zeile$+Ft$
      @Zeile                   ! nÑchstes Feld
    Next I%
    Print #2,Satz$+Zeile$+St$; ! letztes Feld
    @Zeile                     ! Trennzeile
  Loop
  '
  Close #1
  Close #2
  '
Loop
'
'
Procedure Zeile
  Dm%=Instr(Da%,D$,Cr$)
  If Dm%=0
    Dad%=Dae%-Daa%
    If Dad%>0
      If Dad%>Del%
        Dad%=Del%
      Endif
      D$=Mid$(D$,Da%)
      E$=Input$(Dad%,#1)
      '
      If Right$(Datei$,12)<>"KONV_EXP.INF"
        For I%=1 To Trennz%            ! Stîrtrennzeichen ausfiltern
          Z$=Trenn$(I%)
          Da%=1
          Do
            Dm%=Instr(Da%,E$,Z$)
            Exit If Dm%=0
            E$=Left$(E$,Da%-1)+Sp$+Mid$(E$,Da%+1)
            Da%=Dm%+1
          Loop
        Next I%
        Daa%=Daa%+Dad%
        Pbox 40,100,560*Daa%/Dae%+40,150
      Else
        Daa%=Daa%+Dad%
      Endif
      '
      D$=D$+E$
      Da%=1
      Dm%=Instr(Da%,D$,Cr$)
    Endif
  Endif
  If Dad%>0
    Zeile$=Mid$(D$,Da%,Dm%-Da%)
    Da%=Dm%+2
  Endif
Return
'
