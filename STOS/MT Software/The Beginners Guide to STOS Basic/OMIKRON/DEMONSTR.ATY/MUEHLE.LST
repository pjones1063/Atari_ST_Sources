    NEXT I
    Sz=0:Wz=0
    FOR I=0 TO 23
       IF M(I)=Weiss THEN
          FOR K=1 TO Nachbar%(0,I)
             IF M(Nachbar%(K,I))=0 THEN Wz=Wz+1
