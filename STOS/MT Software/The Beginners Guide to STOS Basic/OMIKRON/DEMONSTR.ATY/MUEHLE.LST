    Mops=Mops OR Schwarz AND M(M1(M2)) AND M(M2(M2)) AND M(M3(M2))
    IF Mops THEN
       Computermops
       IF B<24 THEN
          LOCAL M(B)=0:Wdrag=Wdrag-1
